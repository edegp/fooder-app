{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:tailwindcss/recommended",
    // includes react react-hooks next recommended
    // https://github.com/vercel/next.js/blob/canary/packages/eslint-config-next/index.js
    "next",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "plugins": ["@typescript-eslint", "no-relative-import-paths", "unused-imports", "tailwindcss"],
  "rules": {
    // 使っていないimportを自動lint
    "unused-imports/no-unused-imports": "error",
    // relative pathsの禁止、自動lint
    "no-relative-import-paths/no-relative-import-paths": [
      "error",
      { "allowSameFolder": false, "rootDir": "src", "prefix": "@" }
    ],
    // consoleの禁止
    "no-console": ["warn", { "allow": ["info", "error"] }],
    // importの並び順設定
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", "object", "type", "index"],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "next/**",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "API",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/graphql/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/lib/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/ui/atom/**",
            "group": "index",
            "position": "before"
          },
          {
            "pattern": "@/ui/components/googleMap",
            "group": "index",
            "position": "before"
          },
          {
            "pattern": "@/ui/components/**",
            "group": "index",
            "position": "before"
          },
          {
            "pattern": "**\\.css",
            "group": "index",
            "position": "after"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react", "next/**"],
        "newlines-between": "always",
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ],
    // no-var warningをunderscoreで回避する設定
    "@typescript-eslint/no-unused-vars": [
      "warn", // or "error"
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    // importをファイル先頭に記述
    "import/first": "error",
    // 最後のimportの後に空行を追加
    "import/newline-after-import": "error"
  }
}
